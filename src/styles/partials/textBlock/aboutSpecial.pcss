.aboutSpecial {
  position: relative;
  z-index: -2;
  font: $font-text;
  text-align: center;
  color: white;
  background-color: $color-accent;

  @mixin respond-to desk {
    font: $font-textSmall;
  }
}

.aboutSpecial-holder {
  position: relative;
  padding: 90px 0;
}

.aboutSpecial-text {
  margin: 0 auto;
  width: 55%;
}

.aboutSpecial-img {
  position: absolute;
  top: 25px;
  right: 0;
  z-index: -1;
  width: 270px;
  height: 536px;
  background-image: url('./../img/a_thing_1.svg');
}