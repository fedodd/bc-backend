.adressList {
  margin: 0;
  margin-bottom: 20px;
  padding: 0;
  list-style: none;
  font: $font-descr;

  @mixin respond-to desk {
    font: $font-descrSmall;
  }
}

.adressList-item {
  margin-bottom: 40px;
}

.adressList-name {
  margin: 0;
  padding: 0;
  font-weight: bold;
}

.adressList-descr {
  margin: 0;
  padding: 0;
  color: $color-greyText;
}

.contacts-phone,
.contacts-mail {
  display: block;
  margin-bottom: 5px;
  font: $font-descr;
  font-weight: bold;
  text-decoration: none;
  color: $color-black;

  @mixin respond-to desk {
    font: $font-descrSmall;
  }
  
  &:hover {
    color: $color-accent;
  }
}