.academy {
  position: relative;
  z-index: 5;
  height: 100%;
  padding: 40px 60px 70px $margin-holder;
  box-sizing: border-box;
}

.academy-title {
  font: $font-altTitle;
  margin: 0;
  padding: 0;
  color: $color-altTitle;
  text-transform: uppercase;
}

.academy-popup {
  position: relative;
  top: 60px;
}

#academySliderDots,
#academySlider,
#academyPopupBtn {
  &.is__active {
    display: none;
  }
}
