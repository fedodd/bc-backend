.textBlock {
  position: relative;
  background-color: white;
}

.textBlock-title {
  z-index: 5;
  font: $font-altTitle;
  position: absolute;
  margin: 0;
  margin-bottom: 65px;
  top: 40px;
  left: $margin-holder;
  padding: 0;
  color: $color-altTitle;
  text-transform: uppercase;
  opacity: .75;

  @media only screen and (max-width: 1280px) {
    top: 30px;
    margin-bottom: 30px;
    font: $font-altTitleSmall;
  }

  &.is__fullColour {
    opacity: 1;
  }
 
  .textBlock-content.is__alt & {
    margin-bottom: auto;
  }

  .textBlock-wrapper.is__alt  & {
    color: $color-black;
    position: static;
  }

  .map-russia & {
    color: $color-black;
  }
}

.textBlock-wrapper {
  display: flex;
  height: 100vh;
}

.textBlock-img {
  height: 100%;
  width: 50%;
  background-size: cover;
  background-position: 0 0;
  background-color: black;
}

.textBlock-content {
  height: 100%;
  width: 50%;
  padding: 70px 60px 70px 90px;
  box-sizing: border-box;

  @media only screen and (max-width: 1280px) {
    padding: 50px 40px 50px 60px;
  }

  &.is__alt {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .textBlock-wrapper.is__alt  & {
    padding-top: 40px;
    padding-left: $margin-holder;
  }
}

.textBlock-mainTitle {
  margin: 0;
  padding: 0;
  width: 80%;
  font: $font-title;
  text-transform: uppercase;
  margin-bottom: 50px;

  @media only screen and (max-width: 1280px) {
    font: $font-titleSmall;
    margin-bottom: 35px;
  }
}

.textBlock-description {
  margin: 0;
  padding: 0;
  color: $color-greyText;
  font: $font-descr;
  margin-bottom: 50px;

  @media only screen and (max-width: 1280px) {
    font: $font-descrSmall;
    margin-bottom: 20px;
  }

  &:last-of-type {
    margin-bottom: 65px;
  }
}