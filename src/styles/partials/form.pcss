.form {
  display: flex;
  justify-content: space-around;

  @mixin respond-to medium {
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
  }

  &.is__popup {
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
}

.form-input {
  margin-right: 10px;
  box-sizing: border-box;
  width: 276px;
  border: none;
  border-bottom: 2px solid rgba(255, 255, 255, .7);
  outline: none;
  font: $font-descrAlt;
  text-align: center;
  color: white;
  background-color: transparent;

  @mixin respond-to desk {
    width: 230px;
    font: $font-descrAltSmall;
    
    .is__popup & {
      margin-bottom: 15px;
      padding: 15px 30px;
    }
  }

  @mixin respond-to medium {
    margin-bottom: 40px;
  }

  &::placeholder {
    color: rgba(255, 255, 255, .7);
  }

  &:last-child {
    margin-right: 0;
  }

  .is__popup & {
    margin-bottom: 20px;
    padding: 20px 45px;
  }
}

.form-submit {
  margin: 0;

  @mixin respond-to desk {
    margin-left: 15px;

    .is__popup & {
      margin-top: 15px;
    }
  }

  @mixin respond-to large {
    margin-left: 20px;
  }

  .is__popup & {
    margin-top: 20px;
  }
}