.footer-social {
  display: flex;
  justify-content: space-between;
  border-bottom: 2px solid #E2E6E9;
  padding-bottom: 20px;
  margin-bottom: 25px;
}

.social-item {
  margin-left: 30px;
}

.social-title {
  margin-left: 15px;
}

.social-icon {

  &.is__vk {
    width: 23px;
  }

  &.is__fb {
    width: 11px;
  }

  &.is__inst {
    width: 18px;
  }
}