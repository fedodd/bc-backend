.button {
  display: inline-block;
  padding: 20px 45px;
  background-color: $color-accent;
  color: white;
  font: $font-button;
  text-transform: uppercase;
  white-space: nowrap;

  &.with__border {
    border: 2px solid rgba(255, 255, 255, .7);;
  }
}

.button-wrapper {
  margin: 0 auto;
  width: inherit;

  &.is__alt {
    margin: 0;
  }
}
