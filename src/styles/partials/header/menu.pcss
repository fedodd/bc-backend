.menu {
  display: flex;
  margin: 0;
  padding: 0;
  list-style: none;

  &.is__mobile {
    flex-direction: column;
    align-items: flex-start;
  }
}

.menu-link {
  display: block;
  margin: 0 10px;
  padding: 5px 10px;
  text-decoration: none; 
  color: black;
  transition: .3s;

  &:hover {
    color: $color-accent;
  }

  .is__mobile & {
    margin: 5px 0;
    padding: 1px 1px 1px 0;
    color: white;

    &:hover {
      color: white;
    }
  }
}