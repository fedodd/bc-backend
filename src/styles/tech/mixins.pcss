@define-mixin respond-to $media {
  @if $media == medium {
    @media only screen and (min-width: 788px) { @mixin-content; }
  } @else if $media == test {
    @media only screen and (min-width: 999px) { @mixin-content; }
  } @else if $media == desk {
    @media only screen and (max-width: 1280px) { @mixin-content; }
  }
}
