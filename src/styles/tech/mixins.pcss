@define-mixin respond-to $media {
  @if $media == medium {
    @media only screen and (max-width: 1023px) { @mixin-content; }
  } @else if $media == middle {
    @media only screen and (min-width: 1024px) and (max-width: 1200px) { @mixin-content; }
  } @else if $media == desk {
    @media only screen and (min-width: 1024px) { @mixin-content; }
  } @else if $media == large {
    @media only screen and (min-width: 1280px) { @mixin-content; }
  }
}
